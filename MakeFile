# Compiler
CXX = g++
CXXFLAGS = -std=c++11 -Wall

# Target Executable
TARGET = state_program

# Source Files
SOURCES = main.cpp stateData.cpp hashT.cpp

# Object Files
OBJECTS = main.o stateData.o hashT.o

# Default target
all: $(TARGET)

# Link the object files to create the executable
$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJECTS)

# Compile main.cpp
main.o: main.cpp stateData.h hashT.h
	$(CXX) $(CXXFLAGS) -c main.cpp

# Compile stateData.cpp
stateData.o: stateData.cpp stateData.h
	$(CXX) $(CXXFLAGS) -c stateData.cpp

# Compile hashT.cpp
hashT.o: hashT.cpp hashT.h stateData.h
	$(CXX) $(CXXFLAGS) -c hashT.cpp

# Clean up
clean:
	rm -f *.o $(TARGET)
